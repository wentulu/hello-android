<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.start.custom.activity.SlideActivity">

    <com.start.custom.view.slide.SlideLayout
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_blue_light"/>

    <com.start.custom.view.slide.OffsetLayout
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_red_light"
        android:layout_marginTop="60dp"/>

    <com.start.custom.view.slide.ParamsLayout
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_green_light"
        android:layout_marginTop="120dp"/>

    <com.start.custom.view.slide.ScrollLayout
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@android:color/holo_orange_light"
        android:layout_marginTop="180dp"/>

    <com.start.custom.view.slide.ScrollerLayout
        android:id="@+id/scroller_layout"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@android:color/darker_gray"
        android:layout_marginTop="240dp"/>

</FrameLayout>